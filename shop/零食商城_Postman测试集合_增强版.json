  "item": [
    {
      "name": "5. 地址管理测试",
      "item": [
        {
          "name": "添加收货地址",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token_user}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"receiverName\": \"张三\",\n  \"phone\": \"13800138000\",\n  \"province\": \"广东省\",\n  \"city\": \"深圳市\",\n  \"district\": \"南山区\",\n  \"detail\": \"科技园南区深南大道10000号\",\n  \"isDefault\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/address/create",
              "host": ["{{base_url}}"],
              "path": ["address", "create"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('添加地址成功', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.id) {",
                  "        pm.environment.set('test_address_id', jsonData.data.id);",
                  "        console.log('测试地址ID已设置:', jsonData.data.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "获取地址列表",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token_user}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/address/list",
              "host": ["{{base_url}}"],
              "path": ["address", "list"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('地址列表正常', function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ]
        }
      ]
